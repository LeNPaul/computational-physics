CPP=g++
LINKER=g++
#FFLAGS=-O3 -openmp -std=c++11 -lomp
FFLAGS= -Wall -O3 -fopenmp -std=c++11

LFLAGS=-fopenmp
OBJECTFILES=hello4.o\

default: Hello4

Hello4: $(OBJECTFILES)
	echo "Compiling"; \
	$(LINKER) $(LFLAGS) $(OBJECTFILES) -o $@ 

$(OBJECTFILES):
	$(CPP) $(FFLAGS) $*.cc -c

hello4.o: hello4.cc

clean:
	rm *.o
